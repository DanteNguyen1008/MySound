<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Container.Full" >

    <RelativeLayout
        android:layout_above="@+id/fraPlaybackControls"
        style="@style/Container.Full" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lstTracks"
            android:layout_above="@+id/pgbLoading"
            style="@style/Container.Full" />

        <ProgressBar
            android:id="@id/pgbLoading"
            style="@style/ProgressBar.Inline.LoadMore" />

    </RelativeLayout>
    
    <fragment
        android:id="@id/fraPlaybackControls"
        android:name="com.dreamdigitizers.mysound.views.classes.fragments.FragmentPlaybackControls"
        style="@style/FragmentPlaybackControls"
        tools:layout="@layout/fragment__playback_controls" />

</RelativeLayout>