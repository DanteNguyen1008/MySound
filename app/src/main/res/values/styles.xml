<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="Container">
    </style>

    <style name="Container.Full" parent="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Container.Full.Padding" parent="Container.Full">
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="Container.Full.PaddingVertical" parent="Container.Full">
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>

    <style name="Container.Full.PaddingHorizontal" parent="Container.Full">
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="Container.Full.OrientationVertical" parent="Container.Full">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Container.Full.OrientationHorizontal" parent="Container">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Container.WrapContent" parent="Container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container.WrapContent.Horizontal" parent="Container.WrapContent">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Container.WrapContent.Vertical" parent="Container.WrapContent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Container.WrapContent.Vertical.Row" parent="Container.WrapContent.Vertical">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Container.WrapContent.Vertical.Row.WithPadding" parent="Container.WrapContent.Vertical.Row">
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="Container.WrapContent.Horizontal.OrientationVertical" parent="Container.WrapContent.Horizontal">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Container.WrapContent.Horizontal.OrientationHorizontal" parent="Container.WrapContent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Container.WrapContent.Vertical.OrientationVertical" parent="Container.WrapContent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Container.WrapContent.Vertical.OrientationHorizontal" parent="Container.WrapContent.Vertical">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Root" parent="Container.Full">
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="Root.DrawerLayout" parent="Root">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppBarLayout" parent="Container.WrapContent.Vertical">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="NavigationView" parent="Container.WrapContent.Horizontal">
        <item name="android:layout_gravity">start</item>
        <item name="headerLayout">@layout/part__drawer_header</item>
        <item name="menu">@menu/menu__drawer</item>
    </style>

    <style name="DrawerHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_header_height</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="Toolbar" parent="Container.WrapContent.Vertical">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_height</item>
        <item name="android:background">@drawable/toolbar_shadow</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="TextView.Profile.Username" parent="TextView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:textSize">@dimen/profile_username_text_size</item>
    </style>

    <style name="TextView.ListItem" parent="TextView">
    </style>

    <style name="TextView.ListItem.Primary" parent="TextView.ListItem">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextView.ListItem.Secondary" parent="TextView.ListItem">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="TextView.ListItem.Primary.Dark" parent="TextView.ListItem.Primary">
        <item name="android:textColor">@color/text_color_primary_dark</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark" parent="TextView.ListItem.Secondary">
        <item name="android:textColor">@color/text_color_secondary_dark</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark.Username" parent="TextView.ListItem.Secondary.Dark">
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark.Duration" parent="TextView.ListItem.Secondary.Dark">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TextView.ListItem.Secondary.Dark.PlaybackCount" parent="TextView.ListItem.Secondary.Dark">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageView.Logo" parent="ImageView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/ic__my_music</item>
    </style>

    <style name="ImageView.Avatar" parent="ImageView">
        <item name="android:layout_width">@dimen/profile_image_width</item>
        <item name="android:layout_height">@dimen/profile_image_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic__default_profile</item>
    </style>

    <style name="ImageView.PlaybackCount" parent="ImageView">
        <item name="android:src">@drawable/ic__play</item>
    </style>
</resources>
